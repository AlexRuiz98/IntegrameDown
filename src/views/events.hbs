<!-- Latest Causes Area -->
<section class="latestc_causes lc_pages">
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <!-- Events -->
                {{#if events}}
                {{#each events}}
                <div class="events_item">   
                    <div class="media">
                        <h2><b>{{dateTimeFormated.day}}</b>{{dateTimeFormated.month}} {{dateTimeFormated.year}}</h2>
                        <div class="media-body">
                            <h6>
                                Ubicación: {{location}}
                            </h6>
                            <a href="/events/{{_id}}" class="heding">{{title}}</a>
                        </div>
                    </div>
                </div>
                {{/each}}

                {{else}}
                <h1>Ups!</h1>
                <p>Al parecer aun no hay eventos agendados para este año.</p>
                {{/if}}


            </div>
        </div>
    </div>
</section>
<!-- Latest Causes Area -->

